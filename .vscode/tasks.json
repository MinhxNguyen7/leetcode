{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C++ Build current file (debug)",
            "command": "g++",
            "type": "shell",
            "args": [
                "${file}",
                "-o",
                "bin/${fileBasenameNoExtension}.out",
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-g",
                "-I${workspaceFolder}"
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        }
    ]
}